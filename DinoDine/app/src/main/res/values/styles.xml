<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorPrimaryLight">@color/colorPrimaryLight</item>-->
    </style>
    <style name="myTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">@color/colorPrimaryDark</item>
        <item name="android:numbersBackgroundColor">@color/colorAccentLight</item>
        <item name="android:numbersSelectorColor">@color/colorSelected</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

    <!--Calendar styles-->
    <style name="CalendarViewDateCustomText" parent ="android:TextAppearance.DeviceDefault.Small">
        <item name="android:dateTextAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="CalendarViewWeekCustomText" parent ="android:TextAppearance.DeviceDefault.Small">
        <item name="android:weekDayTextAppearance">@android:style/TextAppearance.Medium</item>
    </style>
    <style name="SpinnerTextAppearance" parent = "android:TextAppearance.DeviceDefault.Small">
        <item name="android:weekDayTextAppearance">@android:style/TextAppearance.Medium</item>
    </style>


</resources>
