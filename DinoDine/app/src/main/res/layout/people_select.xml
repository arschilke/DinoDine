<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeopleSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="People"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="40dp">

            <Button
                android:id="@+id/num1"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@android:color/white"
                />

            <Button
                android:id="@+id/num2"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@android:color/white"
                />

            <Button
                android:id="@+id/num3"
                style="@android:drawable/btn_default"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@android:color/white"
                />

            <Spinner
                android:id="@+id/spinner4plus"
                android:entries="@array/peopleNum"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton_active" />
                <!--
                android:background="@android:drawable/btn_dropdown"/>
                -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <!--marginStart=400dp-->

            <Button
                android:id="@+id/confirmPeople"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Done"
                android:textAlignment="center" />

            <!--layout_weight="1"-->
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>