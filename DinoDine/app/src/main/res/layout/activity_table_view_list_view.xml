<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableViewListViewActivity">


    <Button
        android:id="@+id/tableViewBtn"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/table_view"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/listViewBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/listViewBtn"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/list_view"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableViewBtn" />

</android.support.constraint.ConstraintLayout>